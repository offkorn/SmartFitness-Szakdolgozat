<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFitness.Pages.LecturePage"
             BackgroundColor="#F6FAFD">
   

    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Never" VerticalOptions="FillAndExpand">
        <VerticalStackLayout Padding="15,20" Spacing="45">

            
               <!--Header Frame -->
            <Frame 
                       BackgroundColor="#FFFFFF" 
                       CornerRadius="15" 
                       Padding="10"
                       BorderColor="Transparent"
                       HasShadow="True">

                    <Frame.Shadow>
                        <Shadow Brush="#C0C0C0" Offset="1,1"  Radius="3"/>
                    </Frame.Shadow>

                    
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10" >
                    <VerticalStackLayout HorizontalOptions="Start" Spacing="2" Grid.Column="0">

                        <Frame 
                                BackgroundColor="#FAFAFA" Padding="10,0" Margin="0,0,50,0" BorderColor="Transparent">
                            <Label Text="Learn"
                               FontSize="Large"
                               FontAttributes="Bold" FontFamily="InriaSerifBold"
                               TextColor="#2C3E50"
                               HorizontalTextAlignment="Start" />
                        </Frame>

                        <Frame 
                                BackgroundColor="#ECECEC" Padding="10,2" Margin="0,0,20,0" BorderColor="Transparent">
                            <Label Text="Something"
                               FontSize="Large" FontFamily="InriaSerifBold"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               HorizontalTextAlignment="Start" />
                        </Frame>

                        <Frame 
                            BackgroundColor="#859700"
                            Padding="10,2,0,2" BorderColor="Transparent">

                            <Label Text="New!"
                               FontSize="Large" FontFamily=""
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalTextAlignment="Start" />
                        </Frame>
                    </VerticalStackLayout>

                    <Image Source="lecture_image.svg" Grid.Column="1" Margin="0,0,10,0" Scale="1.2"></Image>

                </Grid>
            </Frame>

            
            



            <!-- Lecture List-->
            <VerticalStackLayout Spacing="15" Margin="0,10,0,10">

                <Frame CornerRadius="15" Padding="0,10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BorderColor="Transparent" BackgroundColor="#ffffff" HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMuscleBuildingClicked" />
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                        <Label Text="Understanding Muscle Building"
                           FontSize="Small"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1" Scale="0.2" Opacity="0.5" />
                    </Grid>
                </Frame>


                <Frame CornerRadius="15" Padding="0,10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BorderColor="Transparent" BackgroundColor="#ffffff" HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnNutritionClicked" />
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                        <Label Text="Basics of Nutrition"
                           FontSize="Small"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1" Scale="0.2" Opacity="0.5" />
                    </Grid>
                </Frame>


                <Frame CornerRadius="15" Padding="0,10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BorderColor="Transparent" BackgroundColor="#ffffff" HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSleepClicked" />
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                        <Label Text="Importance of Sleep"
                           FontSize="Small"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1" Scale="0.2" Opacity="0.5" />
                    </Grid>
                </Frame>


                <Frame CornerRadius="15" Padding="0,10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BorderColor="Transparent" BackgroundColor="#ffffff" HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCardioClicked" />
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                        <Label Text="Cardio for Beginners"
                           FontSize="Small"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1" Scale="0.2" Opacity="0.5" />
                    </Grid>
                </Frame>


                <Frame CornerRadius="15" Padding="0,10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BorderColor="Transparent" BackgroundColor="#ffffff" HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFlexibilityClicked" />
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                        <Label Text="Flexibility and Mobility"
                           FontSize="Small"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1" Scale="0.2" Opacity="0.5" />
                    </Grid>
                </Frame>


                <Frame CornerRadius="15" Padding="0,10" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BorderColor="Transparent" BackgroundColor="#ffffff" HasShadow="True">

                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMentalHealthClicked" />
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="*,Auto" Padding="10,5">
                        <Label Text="Mental Health Basics" 
                           FontSize="Small"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1" Scale="0.2" Opacity="0.5" />
                    </Grid>
                </Frame>

            </VerticalStackLayout>
   

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>