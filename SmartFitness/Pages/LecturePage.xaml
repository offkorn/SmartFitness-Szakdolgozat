<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFitness.Pages.LecturePage"
             BackgroundColor="#F6FAFD">
   

    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Never" VerticalOptions="FillAndExpand">
        <VerticalStackLayout Padding="15,20" Spacing="15">

            
               <!--Header Frame -->
            <Frame 
                       BackgroundColor="#FFFFFF" 
                       CornerRadius="15" 
                       Padding="10"
                       BorderColor="Transparent"
                       HasShadow="True">

                    <Frame.Shadow>
                        <Shadow Brush="#C0C0C0" Offset="1,1"  Radius="3"/>
                    </Frame.Shadow>

                    
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10" >
                    <VerticalStackLayout HorizontalOptions="Start" Spacing="2" Grid.Column="0">

                        <Frame 
                                BackgroundColor="#FAFAFA" Padding="10,0" Margin="0,0,50,0" BorderColor="Transparent">
                            <Label Text="Learn"
                               FontSize="Large"
                               FontAttributes="Bold" FontFamily="InriaSerifBold"
                               TextColor="#2C3E50"
                               HorizontalTextAlignment="Start" />
                        </Frame>

                        <Frame 
                                BackgroundColor="#ECECEC" Padding="10,2" Margin="0,0,20,0" BorderColor="Transparent">
                            <Label Text="Something"
                               FontSize="Large" FontFamily="InriaSerifBold"
                               FontAttributes="Bold"
                               TextColor="#2C3E50"
                               HorizontalTextAlignment="Start" />
                        </Frame>

                        <Frame 
                            BackgroundColor="#859700"
                            Padding="10,2,0,2" BorderColor="Transparent">

                            <Label Text="New!"
                               FontSize="Large" FontFamily=""
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalTextAlignment="Start" />
                        </Frame>
                    </VerticalStackLayout>

                    <Image Source="lecture_image.svg" Grid.Column="1" Margin="0,0,10,0" Scale="1.2"></Image>

                </Grid>
            </Frame>

            
            <!-- Search bar-->
            <Frame BackgroundColor="#F6FAFD"
                   BorderColor="#E2E2E2"
                   HorizontalOptions="FillAndExpand"
                   CornerRadius="15"
                   Padding="0"
                   Margin="0,20,0,20" HasShadow="True">
                <Frame.Shadow>
                    <Shadow Brush="#E8EBEE" Offset="1,4"  Radius="0"/>
                </Frame.Shadow>

                <Grid>
                    <Entry Placeholder="Search for meals"
                           Keyboard="Default"
                           HorizontalOptions="FillAndExpand"
                           Margin="20,0,40,0"
                           VerticalOptions="Center"
                           PlaceholderColor="DarkSlateGrey"
                           TextColor="Black"
                           FontSize="Small"/>
                    
                    <Image Margin="0,0,20,0"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           Source="search_icon.png" 
                           Scale="0.7"/>
                </Grid>
            </Frame>



            <!-- Lecture List-->
            <VerticalStackLayout Spacing="15" Margin="0,10,0,10">

                <!-- Frame with Muscle Building Button -->
                <Frame CornerRadius="15"
                       Padding="0,10"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       BorderColor="Transparent"
                       BackgroundColor="#ffffff"
                       HasShadow="True">

                    <Grid ColumnDefinitions="*,Auto">
                        <Button x:Name="MuscleBuildingButton"
                            BackgroundColor="Transparent"
                            Text="Understanding Muscle Building"
                            FontSize="Small"
                            FontAttributes="Bold"
                                FontFamily="" Grid.Column="0"
                            TextColor="#2C3E50"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            Clicked="OnMuscleBuildingClicked" />
                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1"
                                     Scale="0.2" Opacity="0.5"></ImageButton>
                    </Grid>
                    
                </Frame>

    


                <!-- Frame Nutrition button -->
                <Frame CornerRadius="15"
                       Padding="0,10"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       BorderColor="Transparent"
                       BackgroundColor="#ffffff"
                       HasShadow="True">

                    <Grid ColumnDefinitions="*,Auto">
                        <Button x:Name="NutritionButton"
                            BackgroundColor="Transparent"
                            Text="Basics of Nutrition"
                            FontSize="Small"
                            FontAttributes="Bold"
                                FontFamily=""
                            TextColor="#2C3E50"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            Padding="10,15"
                            Clicked="OnNutritionClicked"/>
                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1"
                                     Scale="0.2" Opacity="0.5"></ImageButton>
                    </Grid>

                </Frame>


                <!-- Frame Sleep button-->
                <Frame CornerRadius="15"
                       Padding="0,5"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       BorderColor="Transparent"
                       BackgroundColor="#ffffff"
                       HasShadow="True">

                    <Grid ColumnDefinitions="*,Auto">
                            <Button x:Name="SleepButton"
                                    BackgroundColor="#60FFFFFF"
                                    Text="Importance of Sleep"
                                    FontSize="Small"
                                    FontAttributes="Bold"       FontFamily=""
                                    TextColor="#2C3E50"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"
                                    Padding="10,15"
                                    CornerRadius="15"
                                    Clicked="OnSleepClicked">
                            </Button>
                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1"
                                     Scale="0.2" Margin="0,0,0,0" Opacity="0.5"></ImageButton>
                    </Grid>

                </Frame>



                <!--Frame Cardio for Beginners button-->
                <Frame CornerRadius="15"
                       Padding="0,5"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       BorderColor="Transparent"
                       BackgroundColor="#ffffff"
                       HasShadow="True">

                    <Grid ColumnDefinitions="*,Auto">
                        <Button 
                                BackgroundColor="Transparent"
                                Text="Cardio for Beginners"
                                FontSize="Small"
                                FontAttributes="Bold"       FontFamily=""
                                TextColor="#2C3E50"
                                VerticalOptions="Center"
                                HorizontalOptions="Start"
                                Padding="10,15" />
                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1"
                                     Scale="0.2" Margin="0,0,0,0" Opacity="0.5"></ImageButton>
                    </Grid>

                </Frame>


                <!-- Frame Flexibility and Mobility button -->
                <Frame CornerRadius="15"
                       Padding="0,5"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       BorderColor="Transparent"
                       BackgroundColor="#ffffff"
                       HasShadow="True">

                    <Grid ColumnDefinitions="*,Auto">
                        <Button 
                                BackgroundColor="Transparent"
                                Text="Flexibility and Mobility"
                                FontSize="Small"
                                FontAttributes="Bold"       FontFamily=""
                                TextColor="#2C3E50"
                                VerticalOptions="Center"
                                HorizontalOptions="Start"
                                Padding="10,15" />
                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1"
                                     Scale="0.2" Margin="0,0,0,0" Opacity="0.5"></ImageButton>
                    </Grid>

                </Frame>


                <!-- Frame Flexibility and Mobility button -->
                <Frame CornerRadius="15"
                       Padding="0,5"
                       VerticalOptions="FillAndExpand"
                       HorizontalOptions="FillAndExpand"
                       BorderColor="Transparent"
                       BackgroundColor="#ffffff"
                       HasShadow="True">

                    <Grid ColumnDefinitions="*,Auto">
                        <Button 
                                BackgroundColor="Transparent"
                                Text="Mental Health Basics"
                                FontSize="Small"
                                FontAttributes="Bold"       FontFamily=""
                                TextColor="#2C3E50"
                                VerticalOptions="Center"
                                HorizontalOptions="Start"
                                Padding="10,15" />
                        <ImageButton Source="back_icon" Rotation="0" HorizontalOptions="End" VerticalOptions="Center" Grid.Column="1"
                                     Scale="0.2" Margin="0,0,0,0" Opacity="0.5"></ImageButton>
                    </Grid>

                </Frame>






            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>