<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFitness.Pages.ProgressPage"
             BackgroundColor="#F6FAFD">

    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Never" VerticalOptions="FillAndExpand">
        <VerticalStackLayout Padding="15,20" >

            <!-- Felső rész: Cím és Beállítások gomb -->
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="60" Margin="0,0,0,40">


                <Frame Grid.Column="0"
                       HasShadow="True"
                       BorderColor="Transparent"
                       BackgroundColor="White"
                       CornerRadius="15"
                       Padding="10,25,20,25"
                       VerticalOptions="Start">
                    <Frame.Shadow>
                        <Shadow Brush="#C0C0C0" Offset="1,1"  Radius="3"/>
                    </Frame.Shadow>

                    <VerticalStackLayout HorizontalOptions="Start"  VerticalOptions="Center"  Spacing="5">
                        <Frame BackgroundColor="#FAFAFA" Padding="10,0" Margin="0,0,30,0" BorderColor="Transparent">
                            <Label Text="Make" FontSize="Large" TextColor="Black"  FontFamily="InriaSerifBold"/>
                        </Frame>
                        <Frame BackgroundColor="#ECECEC" Padding="10,2" BorderColor="Transparent">
                            <Label Text="Progress!" FontSize="Large" TextColor="Black" FontFamily="InriaSerifBold"/>
                        </Frame>
                    </VerticalStackLayout>

                </Frame>

                <ImageButton Grid.Column="1"
                             Source="settings_icon.png"
                             Scale="0.65"
                             BackgroundColor="Transparent"
                             HorizontalOptions="End"
                             VerticalOptions="Start"
                             Margin="0"
                             Clicked="OnSettingsClicked" />
            </Grid>


            
            
            <!-- pelda Weight grafikon, - illusztracio-->
            <Label Text="&lt; Weight &gt;"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="#859700"
                   Margin="0,0,0,10" />

            <Image Source="diagram.svg"></Image>

            <!-- grafikon oldalakat jelzo pontok, - illusztracio-->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="-25">
                <Frame CornerRadius="30" Scale="0.25" BackgroundColor="#ACB958" />
                <Frame CornerRadius="30" Scale="0.25" BackgroundColor="#ACB958" />
                <Frame CornerRadius="30" Scale="0.25" BackgroundColor="#859700" />
                <Frame CornerRadius="30" Scale="0.25" BackgroundColor="#ACB958" />
                <Frame CornerRadius="30" Scale="0.25" BackgroundColor="#ACB958" />
            </HorizontalStackLayout>



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>