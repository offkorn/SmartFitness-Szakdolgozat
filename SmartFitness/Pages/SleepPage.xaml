<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFitness.Pages.SleepPage"
             Title="Importance of Sleep"
             BackgroundColor="#F6FAFD">

    <ScrollView VerticalOptions="FillAndExpand" VerticalScrollBarVisibility="Never">
        <VerticalStackLayout Spacing="0" Padding="0" VerticalOptions="FillAndExpand">

            

            <!-- Title and Introduction -->
            <Frame BackgroundColor="White"
                   HasShadow="True"
                   BorderColor="Transparent"
                   HorizontalOptions="FillAndExpand"
                   MinimumHeightRequest="80" CornerRadius="0">
                <VerticalStackLayout Margin="15,10" Spacing="8">
                    <Frame BorderColor="Transparent" BackgroundColor="Black" VerticalOptions="Start" HorizontalOptions="Start" Padding="8">
                        <Label Text="Health"
                               FontSize="Micro"
                               FontAttributes="Bold"
                               TextColor="White"/>
                    </Frame>
                    <Label FontAttributes="Bold" FontSize="Medium" FontAutoScalingEnabled="True" Margin="0,8,0,0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Importance of " FontAttributes="Bold" FontSize="Medium" TextColor="Black"/>
                                <Span Text="Sleep" FontAttributes="Bold" FontSize="Medium" TextColor="Green"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label FontSize="Small" TextColor="#4A6375">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Sleep is critical for " FontSize="Small" TextColor="#4A6375"/>
                                <Span Text="recovery" FontSize="Small" TextColor="Blue" FontAttributes="Bold"/>
                                <Span Text=", mental health, and performance." FontSize="Small" TextColor="#4A6375"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Frame>

            <!-- Key Tips -->
            <Frame BackgroundColor="White"
                   HasShadow="True"
                   BorderColor="Transparent"
                   HorizontalOptions="FillAndExpand"
                   MinimumHeightRequest="100"
                   Margin="0,10,0,0">
                <VerticalStackLayout Margin="15,10" Spacing="8">
                    <Label FontAttributes="Bold" FontSize="Subtitle" Margin="0,0,0,10">KEY TIPS</Label>
                    <VerticalStackLayout Spacing="5">
                        <Label Text="• Consistency: Aim for 7-9 hours nightly at regular times."
                               FontSize="Medium"
                               TextColor="Black"/>
                        <Label Text="• Environment: Keep your room dark, quiet, and cool."
                               FontSize="Medium"
                               TextColor="Black"/>
                        <Label Text="• Routine: Avoid screens and caffeine before bed."
                               FontSize="Medium"
                               TextColor="Black"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <!-- Additional Info -->
            <Frame BackgroundColor="White"
                   HasShadow="True"
                   BorderColor="Transparent"
                   HorizontalOptions="FillAndExpand"
                   MinimumHeightRequest="100"
                   Margin="0,10,0,0">
                <VerticalStackLayout Margin="15,10" Spacing="8">
                    <Label FontAttributes="Bold" FontSize="Subtitle" Margin="0,0,0,10">ADDITIONAL INFO</Label>
                    <Label FontSize="Small">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Poor sleep can increase stress " FontSize="Small" TextColor="Black"/>
                                <Span Text="hormones" FontSize="Small" TextColor="Orange" FontAttributes="Bold"/>
                                <Span Text=" and hinder muscle recovery, so prioritize a consistent sleep schedule." FontSize="Small" TextColor="Black"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>