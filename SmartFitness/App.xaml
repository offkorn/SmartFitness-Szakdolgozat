<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartFitness"
             xmlns:sfChart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             x:Class="SmartFitness.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            
            <!-- Back button behavior -->
            <BackButtonBehavior x:Key="CustomBackBehavior"
                                IconOverride="food_icon"
                                IsVisible="true"
                                IsEnabled="true"/>

            <!-- ProgressPage  grafikon -->
            <!-- tengely feliratok -->
            <sfChart:ChartAxisLabelStyle x:Key="AxisLabelStyle"
                             TextColor="#444"
                             FontSize="14"
                             FontFamily="InriaSerifBold"/>




        </ResourceDictionary>
       

       
    </Application.Resources>
</Application>
