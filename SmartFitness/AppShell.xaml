<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:SmartFitness.Pages"
       xmlns:auth="clr-namespace:SmartFitness.Authentication"
       x:Class="SmartFitness.AppShell"   
       xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
       Shell.FlyoutBehavior="Disabled"
       Title="SmartFitness"
       Shell.TabBarBackgroundColor="White"
       Shell.TabBarUnselectedColor="Grey"
       Shell.TabBarForegroundColor="Black"
       Shell.ForegroundColor="Black">



    <Shell.Behaviors>
        <mct:StatusBarBehavior
            x:Name="StatusBarBehavior"
            StatusBarColor="Transparent"
            StatusBarStyle="DarkContent" />
    </Shell.Behaviors>



    <TabBar>
        <ShellContent Icon="home_icon.png"
                      ContentTemplate="{DataTemplate pages:HomePage}" />

        <ShellContent Icon="workout_icon.png"
                      ContentTemplate="{DataTemplate pages:WorkoutPage}" />

        <ShellContent Icon="food_icon.png"
                      ContentTemplate="{DataTemplate pages:FoodPage}" />

        <ShellContent Icon="lecture_icon.png"
                      ContentTemplate="{DataTemplate pages:LecturePage}" />

        <ShellContent Icon="progress_icon.png"
                      ContentTemplate="{DataTemplate pages:ProgressPage}" />
    </TabBar>
   

</Shell>