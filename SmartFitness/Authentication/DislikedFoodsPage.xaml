<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFitness.Authentication.DislikedFoodsPage"
                          Shell.NavBarIsVisible="False"
              BackgroundColor="#F6FAFD"
             NavigationPage.HasNavigationBar="False" 
             Padding="0,40,0,0">

    <ScrollView VerticalScrollBarVisibility="Never">
    <VerticalStackLayout Padding="30" Spacing="30">

        <!-- tab bar -->
        <Label Text="Select foods you dislike"
       FontSize="Large"
       FontAttributes="Bold"
       HorizontalOptions="Center"
       Margin="40,20,40,40" HorizontalTextAlignment="Center"/>


        <Grid ColumnDefinitions="*,*" 
              RowDefinitions="*,*,*" 
              RowSpacing="15" 
              ColumnSpacing="15"
              HorizontalOptions="Fill"
              VerticalOptions="Center">
            <!-- Row 0 -->
            <Frame x:Name="FishFrame"
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   CornerRadius="10"
                   HeightRequest="60"
                   Grid.Row="0" Grid.Column="0"
                   Padding="10">
                <Label Text="Fish" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <Frame x:Name="PorkFrame"
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   CornerRadius="10"
                   HeightRequest="60"
                   Grid.Row="0" Grid.Column="1"
                   Padding="10">
                <Label Text="Pork" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <!-- Row 1 -->
            <Frame x:Name="EggFrame"
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   CornerRadius="10"
                   HeightRequest="60"
                   Grid.Row="1" Grid.Column="0"
                   Padding="10">
                <Label Text="Egg" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <Frame x:Name="MilkFrame"
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   CornerRadius="10"
                   HeightRequest="60"
                   Grid.Row="1" Grid.Column="1"
                   Padding="10">
                <Label Text="Milk" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <!-- Row 2 -->
            <Frame x:Name="PotatoFrame"
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   CornerRadius="10"
                   HeightRequest="60"
                   Grid.Row="2" Grid.Column="0"
                   Padding="10">
                <Label Text="Potato" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>

            <Frame x:Name="NutsFrame"
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   CornerRadius="10"
                   HeightRequest="60"
                   Grid.Row="2" Grid.Column="1"
                   Padding="10">
                <Label Text="Nuts" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Frame>
        </Grid>

        <!-- Gombok -->
        <HorizontalStackLayout Margin="0,60,0,0" Spacing="20" HorizontalOptions="Center" >
            <Button Text="Previous" 
                CornerRadius="20" Padding="10,15" 
                BackgroundColor="#999101"
                TextColor="WhiteSmoke"
                FontSize="Medium"
                FontAttributes="Bold"
                HorizontalOptions="FillAndExpand"
                Clicked="OnPreviousButtonClicked"  />
            <Button Text="Next"
                CornerRadius="20" Padding="10,15" 
                BackgroundColor="#859700"
                TextColor="White"
                FontSize="Medium"
                FontAttributes="Bold"
                HorizontalOptions="FillAndExpand"
                Clicked="OnNextButtonClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
        </ScrollView>
</ContentPage>