<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFitness.Authentication.WorkoutExperiencePage"
             Shell.NavBarIsVisible="False"
              BackgroundColor="#F6FAFD"
             NavigationPage.HasNavigationBar="False" 
             Padding="0,40,0,0">

    <ScrollView VerticalScrollBarVisibility="Never">
        <VerticalStackLayout Padding="0" Spacing="15" >

            
        <!-- tab bar -->
        <Label Text="Select your workout experience level"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="40,20,40,40" HorizontalTextAlignment="Center"/>


        <!-- Edzéstapasztalat választása -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Frame x:Name="BeginnerFrame"
                       BackgroundColor="White"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="20"
                       MinimumHeightRequest="50"
                       WidthRequest="200">
                    <Label Text="Beginner"
                           FontSize="Medium"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <Frame x:Name="IntermediateFrame"
                       BackgroundColor="White"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="20"
                       MinimumHeightRequest="50"
                       WidthRequest="200">
                    <Label Text="Intermediate"
                           FontSize="Medium"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <Frame x:Name="AdvancedFrame"
                       BackgroundColor="White"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="20"
                       MinimumHeightRequest="50"
                       WidthRequest="200">
                    <Label Text="Advanced"
                           FontSize="Medium"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>
            </VerticalStackLayout>

        <!-- Gombok -->
        <HorizontalStackLayout Margin="0,60,0,0" Spacing="20" HorizontalOptions="Center" >
            <Button Text="Previous" 
                        CornerRadius="20" Padding="10,15" 
                        BackgroundColor="#999101"
                        TextColor="WhiteSmoke"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnPreviousButtonClicked"  />
            <Button Text="Next"
                        CornerRadius="20" Padding="10,15" 
                        BackgroundColor="#859700"
                        TextColor="White"
                        FontSize="Medium"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand"
                        Clicked="OnNextButtonClicked" />
        </HorizontalStackLayout>
        </VerticalStackLayout>
        </ScrollView >
</ContentPage>