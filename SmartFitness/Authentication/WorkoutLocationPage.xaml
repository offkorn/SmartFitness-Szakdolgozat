<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartFitness.Authentication.WorkoutLocationPage"
             Shell.NavBarIsVisible="False"
            BackgroundColor="#F6FAFD"
            NavigationPage.HasNavigationBar="False" 
      
            Padding="0,40,0,0">

    <ScrollView VerticalOptions="FillAndExpand">
        <VerticalStackLayout Padding="0" Spacing="0">

            <!-- tab bar -->
            <Label Text="Select your workout location"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,20,0,50" />
            

            <!-- Helyszínválasztás -->
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Frame x:Name="GymFrame"
                       BackgroundColor="White"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="30,20"
                        >
                    <!--GestureRecognizers="{TapGestureRecognizer Command=OnGymTapped}"-->
                    <Label Text="Gym"
                           FontSize="Medium"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <Frame x:Name="HomeFrame"
                       BackgroundColor="White"
                       BorderColor="Transparent"
                       CornerRadius="10"
                       Padding="30,20"
                         >
                    <!--="{TapGestureRecognizer Command=OnHomeTapped}"-->
                    <Label Text="Home"
                           FontSize="Medium"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>
            </HorizontalStackLayout>

            <!-- Gombok -->
            <HorizontalStackLayout Margin="0,60,0,0" Spacing="20" HorizontalOptions="Center" >
                    <Button Text="Previous" 
                            CornerRadius="20" Padding="10,15" 
                            BackgroundColor="#999101"
                            TextColor="WhiteSmoke"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            HorizontalOptions="FillAndExpand"
                            Clicked="OnPreviousButtonClicked"  />
                    <Button Text="Next"
                            CornerRadius="20" Padding="10,15" 
                            BackgroundColor="#859700"
                            TextColor="White"
                            FontSize="Medium"
                            FontAttributes="Bold"
                            HorizontalOptions="FillAndExpand"
                            Clicked="OnNextButtonClicked" />
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>